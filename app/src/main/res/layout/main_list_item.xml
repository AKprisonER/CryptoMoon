<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="0dp">
    <RelativeLayout
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView android:id="@+id/main_item_market_logo"
                android:src="@drawable/ic_btc"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginRight="3dp"
                android:layout_marginEnd="3dp"/>
            <TextView android:id="@+id/main_item_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BTC/USD"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_title"/>
        </LinearLayout>
        <TextView android:id="@+id/main_item_last_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2542"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <TextView android:id="@+id/main_item_change_in_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+101%"
            android:textColor="@android:color/black"
            android:layout_below="@id/main_item_last_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView android:id="@+id/main_item_holding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3.1235235"
            android:textColor="@android:color/black"
            android:layout_below="@id/main_item_change_in_24"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <ImageView android:id="@+id/main_item_graph"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/graph_sample"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>